<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.config.NoticeMapper">
	<select id="selectAllNotice" resultType = "NoticeDTO">
		select *
		from notice
		order by id asc
	</select>
	
	<select id="selectNoticeContent" resultType = "NoticeDTO" parameterType="int">
		select *
		from notice
		where id = #{id}
		order by id asc
	</select>
	<!-- 제목을 선택했을 때 조회수는 어떻게 늘리지? hit += 1을 적용해야하는데 방법을 잘... -->
	
	<insert id="insertNotice" parameterType="NoticeDTO">
		insert into notice(id,title,writerid,content,regdate,hit,files)
		values (notice_seq.nextval,
				#{title},
				#{writerid},
				#{content},							
				#{regdate},
				#{hit},	
				#{files}
				)
		
	</insert>
	
	<delete id="deleteNotice" parameterType="int">
		delete from notice
		where id = #{id}	
	</delete>	
	
	
	<select id="totalCount" resultType="int">
      select count(*)
      from notice     
    </select>
	
</mapper>